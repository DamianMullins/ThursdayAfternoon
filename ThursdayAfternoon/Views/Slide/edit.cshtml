@using ThursdayAfternoon.Nancy.Extensions
@inherits NancyRazorViewBase<ThursdayAfternoon.ViewModels.Slide.EditViewModel>
@{
    Layout = "shared/_layout";
    ViewBag.Title = "Edit Slide";
}

<h1>Edit @Model.Title</h1>

<div class="row">
    <div class="col-lg-8">
        <form action="@Url.Content("~/slide/edit/" + @Model.PresentationId + "/" + @Model.Id)" method="post">
            <div class="form-group">
                <label for="Title">Title</label>
                @Html.TextBox("Title", "form-control", "Title")
            </div>

            <div class="form-group">
                <label for="Content">Content</label>
                @Html.TextArea("Content", "form-control tinymce", 10, 15)
            </div>

            @Html.Hidden("CreatedOn")
            @Html.Hidden("ModifiedOn")

            <button class="btn btn-default" type="submit">Edit</button>
            <a href="@Url.Content("~/presentation/edit/" + @Model.PresentationId)" class="btn">Cancel</a>
        </form>
    </div>
    <div class="col-lg-4">
    </div>
</div>

@section scripts {
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script>
        $(function () {
            $('textarea.tinymce').tinymce({
                script_url: '/scripts/tinymce/tinymce.js',
                schema: 'html5',
                //inline: true,
                toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                menubar: false,
                statusbar: false
            });
        });
    </script>
}