@using ThursdayAfternoon.Nancy.Extensions
@inherits NancyRazorViewBase<ThursdayAfternoon.ViewModels.Slide.EditViewModel>
@{
    Layout = "shared/_layout";
    ViewBag.Title = "Add Slide";
}

<h1>Add Slide</h1>

<div class="row">
    <div class="col-lg-8">
        <form action="@Url.Content("~/slide/create/" + Model.PresentationId)" method="post">
            <div class="form-group">
                <label for="Title">Title</label>
                @Html.TextBox("Title", "form-control", "Title")
            </div>

            <div class="form-group">
                <label for="Content">Content</label>
                @Html.TextArea("Content", "form-control tinymce", 10, 15)
            </div>

            <button class="btn btn-default" type="submit">Create</button>
            <a href="@Url.Content("~/presentation/edit/" + @Model.PresentationId)" class="btn btn-inverse">Cancel</a>
        </form>
    </div>
    <div class="col-lg-4">
    </div>
</div>

@section scripts {
    @{
        WriteLiteral(Bundle.JavaScript()
            .Add("~/scripts/tinymce/jquery.tinymce.min.js")
            .Add("~/scripts/tinymce-config.js")
            .Render("~/scripts/tinymce_#.js"));
    }
}
