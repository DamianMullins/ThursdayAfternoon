@using ThursdayAfternoon.Nancy.Extensions
@inherits NancyRazorViewBase<ThursdayAfternoon.ViewModels.Slide.EditViewModel>
@{
    Layout = "shared/_layout";
    ViewBag.Title = "Add Slide";
}

<h1>Add Slide @Model.ToString()</h1>

<div class="row">
    <div class="col-lg-8">
        <form class="@Url.Content("~/slide/create/")" method="post">
            <div class="form-group">
                <label for="Title">Title</label>
                @Html.TextBox("Title", "form-control", "Title")
            </div>

            <div class="form-group">
                <label for="Content">Content</label>
                @Html.TextBox("Content", "form-control", "Content")
            </div>

            <button class="btn btn-default" type="submit">Create</button>
            <a href="@Url.Content("~/presentation")" class="btn btn-inverse">Cancel</a>
        </form>
    </div>
    <div class="col-lg-4">
    </div>
</div>
