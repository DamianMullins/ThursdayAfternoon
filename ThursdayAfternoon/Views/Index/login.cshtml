@using ThursdayAfternoon.Nancy.Extensions
@inherits NancyRazorViewBase<ThursdayAfternoon.ViewModels.Index.LoginViewModel>
@{
    ViewBag.Title = "Login";
    Layout = "shared/_layout";
}

<h1>Login</h1>

<div class="row">
    <div class="col-lg-4">
        <form class="@Url.Content("~/login")" method="post">
            <div class="form-group">
                <label for="Username">Username</label>
                @Html.TextBox("Username", "form-control", "Username")
            </div>
            
            <div class="form-group">
                <label for="Password">Password</label>
                @Html.Password("Password", "form-control", "Password")
            </div>
            
            <div class="checkbox">
                <label for="RememberMe">
                    @Html.CheckBox("RememberMe", true) 
                    Remember me
                </label>
            </div>

            <button class="btn btn-default" type="submit">Sign in</button>
        </form>

        <a href="/register">Register &rarr;</a>
    </div>
</div>
